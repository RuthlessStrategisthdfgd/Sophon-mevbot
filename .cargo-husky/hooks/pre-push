set -e

# Running all the tests
echo '+cargo test --all'
cargo test --all

# Stricly verifies the code's correctness and idiomatics of the code
echo '+cargo clippy --all -- -D warnings'
cargo clippy --all -- -D warnings

# Verifies the code is formatted properly
echo '+cargo +nightly fmt --all -- --check'
cargo +nightly fmt --all -- --check

# This looks for unused crates from Cargo.toml in crates
echo '+cargo +nightly udeps --all-targets'
cargo +nightly udeps --all-targets
